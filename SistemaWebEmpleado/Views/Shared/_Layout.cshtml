<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link href="~/css/main.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="d-flex w-100 flex-column">
            <div class="d-flex">
                <header>
                    <h1 class="text-end">Sistema EMPLEADO</h1>
                </header>
            </div>
            <div class="py-3 px-5 text-success fw-bold">
                @RenderSection("sidebar", required: true)
            </div>
            <nav class="d-flex flex-row justify-content-end">
                <ul class="d-flex">
                    <li>
                        @Html.ActionLink("Home", "Index", "Home")
                    </li>
                    <li>
                        @Html.ActionLink("Empleado", "Index", "Empleado")
                    </li>
                </ul>
            </nav>
            <article id="content">
                @RenderBody()
            </article>
            <footer>
                <p>Info@Empleado.com</p>
            </footer>
        </div>
    </div>

</body>
</html>